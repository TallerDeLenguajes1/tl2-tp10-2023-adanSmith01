@model tl2_tp10_2023_adanSmith01.ViewModels.TableroViewModel

@{ViewData["title"]="Actualizar tablero";}

<h1 class="text-center">Actualizar tablero</h1>

<section>
    <article>
        <form asp-controller = "Tablero" asp-action="ActualizarTablero" method="post" class="form-view">
            <input hidden asp-for="@Model.Id" class="form-control">
            <section class="mb-3">
                <label asp-for="@Model.Nombre" class="form-label"></label>
                <input asp-for = "@Model.Nombre" value="@Model.Nombre" class="form-control">
                <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
            </section>
            <section class="mb-3">
                <label asp-for="@Model.Descripcion" class="form-label"></label>
                <input asp-for = "@Model.Descripcion" value="@Model.Descripcion" class="form-control">
            </section>
            <input hidden asp-for="@Model.IdUsuarioPropietario">
            <input type="submit" class="btn btn-outline-success" value="Confirmar">
        </form>
    </article>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }