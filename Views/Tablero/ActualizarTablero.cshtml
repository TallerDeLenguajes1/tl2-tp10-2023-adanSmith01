@model tl2_tp10_2023_adanSmith01.ViewModels.TableroUsuarioViewModel

@{ViewData["title"]="Actualizar tablero";}


<section>
    <article>
        <form asp-controller = "Tablero" asp-action="ActualizarTablero" method="post" class="form-crear-actualizar">
            <h1 class="title-form">Actualizar tablero</h1>
            <section class="mb-3">
                <label asp-for="@Model.Tablero.Nombre" class="form-label"></label>
                <input asp-for = "@Model.Tablero.Nombre" value="@Model.Tablero.Nombre" class="form-control">
                <span asp-validation-for="@Model.Tablero.Nombre" class="text-danger"></span>
            </section>
            <section class="mb-3">
                <label asp-for="@Model.Tablero.Descripcion" class="form-label"></label>
                <input asp-for = "@Model.Tablero.Descripcion" value="@Model.Tablero.Descripcion" class="form-control">
            </section>
            <section class="mb-3">
                <label asp-for="@Model.Usuario.Id" class="form-label">Nombre del propietario</label>
                <input asp-for = "@Model.Usuario.Nombre" class="form-control" disabled>
            </section>
            <input hidden asp-for="@Model.Tablero.IdUsuarioPropietario" value="@Model.Usuario.Id">
            <input hidden asp-for="@Model.Tablero.Id">
            <input type="submit" value="Confirmar" class="btn btn-outline-success">
        </form>
    </article>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }