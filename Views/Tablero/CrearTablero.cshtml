@model tl2_tp10_2023_adanSmith01.ViewModels.TableroUsuarioViewModel

@{ViewData["title"]="Crear tablero";}


<section>
    @if(TempData.ContainsKey("DatosInvalidos")) {<article><p>@TempData["DatosInvalidos"]</p></article>}
    <article>
        <form asp-controller = "Tablero" asp-action="CrearTablero" method="post" class="form-crear-actualizar">
            <h1 class="title-form">Crear tablero</h1>
            <section class="mb-3">
                <label asp-for="@Model.Tablero.Nombre" class="form-label"></label>
                <input asp-for = "@Model.Tablero.Nombre" placeholder = "Ej. tablero de usuario" class="form-control">
                <span asp-validation-for="@Model.Tablero.Nombre" class="text-danger"></span>
            </section>
            <section class="mb-3">
                <label asp-for="@Model.Tablero.Descripcion" class="form-label"></label>
                <input asp-for = "@Model.Tablero.Descripcion" class="form-control">
            </section>
            <input hidden asp-for="@Model.Tablero.IdUsuarioPropietario" value="@Model.Usuario.Id">
            <input type="submit" value="Confirmar" class="btn btn-outline-success">
        </form>
    </article>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }