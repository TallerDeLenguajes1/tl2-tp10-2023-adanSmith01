@model tl2_tp10_2023_adanSmith01.ViewModels.ListaTablerosUsuarioViewModel

@{
    ViewData["title"] = "Tableros";
}

@if(Model.UsuariosPropietarios.Count > 1){
    <h1 class="text-center title-view">Tableros de usuarios</h1>
}else{
    <h1 class="text-center title-view">Tableros de "@Model.UsuariosPropietarios[0].Nombre"</h1>
}

<section class="tableros-view" id="tablerosUsuarios">
    @if(!Model.TablerosUsuario.Any())
    {
        <article>
            <p><strong>NO HAY TABLEROS REGISTRADOS</strong></p>
        </article>
    }
    else
    {
        @foreach(var usuarioPropietario in Model.UsuariosPropietarios)
        {
            <section>
                @if(Model.UsuariosPropietarios.Count > 1){<h2>Tableros de "@usuarioPropietario.Nombre"</h2>}
                @foreach(var tablero in Model.TablerosUsuario)
                {
                    @if(tablero.IdUsuarioPropietario == usuarioPropietario.Id)
                    {
                        <article>
                            <h2>@tablero.Nombre</h2>
                            <p>@tablero.Descripcion</p>
                            <section class="btn-actions">
                                <a asp-controller="Tablero" asp-action="ActualizarTablero" asp-route-idTablero = "@tablero.Id" class="btn btn-outline-info">Actualizar
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                    </svg>
                                </a>
                                <a asp-controller="Tablero" asp-action="EliminarTablero" asp-route-idTablero = "@tablero.Id" class="btn btn-outline-danger" onclick="return confirm('Â¿Estas seguro de eliminar el tablero seleccionado?')">Eliminar
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z"/>
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z"/>
                                    </svg>
                                </a>
                                <a asp-controller="Tarea" asp-action="ListarTareasTablero" asp-route-idTablero = "@tablero.Id" class="btn btn-outline-dark">Ver
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                                    </svg>
                                </a>
                            </section>
                        </article>
                    }
                }
            </section>
        }
    }
</section>

