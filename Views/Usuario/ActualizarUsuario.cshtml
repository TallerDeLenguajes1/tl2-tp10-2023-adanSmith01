@model tl2_tp10_2023_adanSmith01.ViewModels.ActualizarUsuarioViewModel

@{ViewData["title"]="Actualizar usuario";}

<h1 class="text-center">Actualizar usuario</h1>
<section>
    <article>
        @if (String.IsNullOrEmpty(Model.Nombre))
        {
           <p><strong>ERROR 404</strong></p>
        }else{
            <form asp-controller="Usuario" asp-action="ActualizarUsuario" method="post" class="form-view">
                <section class="mb-3">
                    <label asp-for="@Model.Nombre" class="form-label"></label>
                    <input asp-for="@Model.Nombre" value="@Model.Nombre" class="form-control">
                </section>
                <section class="mb-3">
                    <label asp-for="@Model.Contrasenia" class="form-label"></label>
                    <input asp-for="@Model.Contrasenia" type="password" class="form-control">
                </section>
                <section class="mb-3">
                    <label asp-for="@Model.RolUsuario"></label>
                    <select asp-for="@Model.RolUsuario" asp-items="@Html.GetEnumSelectList<Rol>()" class="form-select" aria-label="Default select example"></select>
                </section>
                <input hidden asp-for="@Model.IdUsuario" value="@Model.IdUsuario">
                <input type="submit" class="btn btn-outline-success">
            </form>
        }
    </article>
</section>
