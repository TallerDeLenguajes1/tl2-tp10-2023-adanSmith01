@model tl2_tp10_2023_adanSmith01.ViewModels.ActualizarTareaViewModel

@{ViewData["title"]="Actualizar tarea";}

<section>
    <h1 class="text-center">Actualizar tarea</h1>
    <form asp-controller="Tarea" asp-action="ActualizarTarea" method="post" class="form-view" onchange="getColor()">
        <section class="mb-3">
            <label asp-for="@Model.TareaVM.Nombre" class="form-label"></label>
            <input asp-for="@Model.TareaVM.Nombre" value="@Model.TareaVM.Nombre" class="form-control">
        </section>
        <section class="mb-3">
            <label asp-for="@Model.TareaVM.Descripcion" class="form-label"></label>
            <input asp-for="@Model.TareaVM.Descripcion" value="@Model.TareaVM.Descripcion" class="form-control">
        </section>
        <section class="mb-3">
            <label asp-for="@Model.TareaVM.Color" class="form-label"></label>
            <input type="color" id="colorTarea" class="form-control">
            <input hidden asp-for="@Model.TareaVM.Color" id="Color">
        </section>
        <section class="mb-3">
            <label asp-for="@Model.TareaVM.Estado" class="form-label"></label>
            <select asp-for="@Model.TareaVM.Estado" asp-items="@Html.GetEnumSelectList<EstadoTarea>()" class="form-select" aria-label="Default select example">
            </select>
        </section>
        <section class="mb-3">
            <label asp-for="@Model.TareaVM.IdUsuarioAsignado" class="form-label">Asignar usuario</label>
            <select asp-for="@Model.TareaVM.IdUsuarioAsignado" class="form-select">
                <option value="">Ninguno</option>
                @foreach(var usuario in Model.Usuarios){
                    <option value="@usuario.Id">@usuario.Nombre</option>
                }
            </select>
        </section>
        <input hidden asp-for="@Model.TareaVM.Id">
        <input hidden asp-for="@Model.TareaVM.IdTablero">
        <input type="submit" value="Confirmar" class="btn btn-outline-success">
    </form>
</section>

<script src="../js/site.js"></script>